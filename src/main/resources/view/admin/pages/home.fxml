<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.pages.HomeController">
    <!-- Main content container - Increased top padding -->
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="50.0">
        <!-- Dashboard Overview Text - Centered with background -->
        <HBox styleClass="dashboard-header" alignment="CENTER">
            <Label text="Dashboard Overview" styleClass="dashboard-title"/>
        </HBox>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="30">
                    <!-- Product VBox with Stats Cards -->
                    <VBox fx:id="productVBox" spacing="30" style="-fx-padding: 30;">
                        <!-- Stats Cards Container - Increased height -->
                        <HBox spacing="20">
                            <!-- Products Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="180" style="-fx-fill: transparent;" width="300" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Products">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="productsCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>

                            <!-- Emplaadminoyees Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="180" style="-fx-fill: transparent;" width="300" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Employees">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="employeesCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>

                            <!-- Orders Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="180" style="-fx-fill: transparent;" width="300" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Orders">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="ordersCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>

                            <!-- Customers Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="180" style="-fx-fill: transparent;" width="300" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Customers">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="customersCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                        </HBox> <!-- End of HBox for Stats Cards -->

                        <!-- Best Selling Products Table -->
                        <VBox spacing="15" styleClass="content-box">
                            <Label style="-fx-text-fill: #2c3e50;" text="Products Analysis">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                            <TableView fx:id="bestSellingTable" styleClass="table-view" VBox.vgrow="NEVER" />
                        </VBox>
                    </VBox>

                    <!-- Revenue VBox - Increased padding -->
                    <VBox fx:id="revenueVBox" spacing="30" style="-fx-padding: 30;">
                        <!-- Revenue Charts Section -->
                        <VBox spacing="25" styleClass="content-box">
                            <HBox alignment="CENTER" spacing="15">
                                <Label style="-fx-text-fill: #2c3e50;" text="Revenue Analysis">
                                    <font>
                                        <Font name="System Bold" size="28" />
                                    </font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label style="-fx-text-fill: #666666;" text="Year:">
                                    <font>
                                        <Font size="18" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="yearComboBox" prefWidth="120" />
                            </HBox>

                            <HBox spacing="25">
                                <!-- Bar Chart - Increased height -->
                                <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                                    <BarChart fx:id="revenueBarChart" legendVisible="false" prefHeight="450">
                                        <xAxis>
                                            <CategoryAxis side="BOTTOM" />
                                        </xAxis>
                                        <yAxis>
                                            <NumberAxis side="LEFT" />
                                        </yAxis>
                                    </BarChart>
                                </VBox>

                                <!-- Line Chart - Increased height -->
                                <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                                    <LineChart fx:id="growthLineChart" legendVisible="false" prefHeight="450">
                                        <xAxis>
                                            <CategoryAxis side="BOTTOM" />
                                        </xAxis>
                                        <yAxis>
                                            <NumberAxis side="LEFT" />
                                        </yAxis>
                                    </LineChart>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </VBox>

    <!-- Fixed pagination at bottom -->
    <Pagination fx:id="pagination" maxPageIndicatorCount="2" pageCount="2"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                styleClass="pagination"/>
</AnchorPane>
