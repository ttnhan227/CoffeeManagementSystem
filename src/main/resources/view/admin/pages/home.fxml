<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>


<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.admin.pages.HomeController"
            style="-fx-background-color: transparent;"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;"
                AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="50.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <VBox spacing="15">
            <!-- Dashboard Header -->
            <HBox styleClass="dashboard-header" alignment="CENTER">
                <padding>
                    <Insets top="15" bottom="15" left="20" right="20"/>
                </padding>
                <Label text="Dashboard Overview" styleClass="dashboard-title"/>
            </HBox>

            <!-- Main Content -->
            <VBox spacing="20">
                <!-- Product VBox -->
                <VBox fx:id="productVBox" spacing="20" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets left="20" right="20"/>
                    </padding>

                    <!-- Stats Cards HBox - Make it scrollable horizontally -->
                    <ScrollPane fitToHeight="true" style="-fx-background-color: transparent;">
                        <HBox spacing="20" alignment="CENTER">
                            <!-- Stats cards remain the same but with minimum widths -->
                            <StackPane styleClass="stat-card" minWidth="250">
                                <Rectangle arcHeight="25" arcWidth="25" height="160" style="-fx-fill: transparent;" width="320" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Products">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="productsCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                            <StackPane styleClass="stat-card" minWidth="250">
                                <Rectangle arcHeight="25" arcWidth="25" height="160" style="-fx-fill: transparent;" width="320" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Employees">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="employeesCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                            <StackPane styleClass="stat-card" minWidth="250">
                                <Rectangle arcHeight="25" arcWidth="25" height="160" style="-fx-fill: transparent;" width="320" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Orders">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="ordersCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                            <StackPane styleClass="stat-card" minWidth="250">
                                <Rectangle arcHeight="25" arcWidth="25" height="160" style="-fx-fill: transparent;" width="320" />
                                <VBox alignment="CENTER" spacing="15">
                                    <Label style="-fx-text-fill: #666666;" text="Total Customers">
                                        <font>
                                            <Font size="20" />
                                        </font>
                                    </Label>
                                    <Label fx:id="customersCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="40" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                        </HBox>
                    </ScrollPane>

                    <!-- Analysis Section -->
                    <HBox spacing="20" VBox.vgrow="ALWAYS">
                        <!-- Best Selling Products Table -->
                        <VBox spacing="10" styleClass="content-box" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50;" text="Products Analysis">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                            <TableView fx:id="bestSellingTable" VBox.vgrow="ALWAYS"/>
                        </VBox>

                        <!-- Category Performance Chart -->
                        <VBox spacing="10" styleClass="content-box" HBox.hgrow="ALWAYS">
                            <Label style="-fx-text-fill: #2c3e50;" text="Category Performance">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                            <PieChart fx:id="categoryPerformanceChart" legendVisible="true" VBox.vgrow="ALWAYS"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Revenue VBox -->
                <VBox fx:id="revenueVBox" spacing="20" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets left="20" right="20"/>
                    </padding>
                    <!-- Revenue content remains the same but add VBox.vgrow="ALWAYS" to chart containers -->
                    <VBox spacing="25" styleClass="content-box">
                        <HBox alignment="CENTER" spacing="15">
                            <Label style="-fx-text-fill: #2c3e50;" text="Revenue Analysis">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label style="-fx-text-fill: #666666;" text="Year:">
                                <font>
                                    <Font size="18" />
                                </font>
                            </Label>
                            <ComboBox fx:id="yearComboBox" prefWidth="120" />
                        </HBox>

                        <HBox spacing="25">
                            <!-- Bar Chart - Increased height -->
                            <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                                <BarChart fx:id="revenueBarChart" legendVisible="false" prefHeight="450">
                                    <xAxis>
                                        <CategoryAxis side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </BarChart>
                            </VBox>

                            <!-- Line Chart - Increased height -->
                            <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                                <LineChart fx:id="growthLineChart" legendVisible="false" prefHeight="450">
                                    <xAxis>
                                        <CategoryAxis side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </LineChart>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- Pagination at bottom -->
    <Pagination fx:id="pagination" maxPageIndicatorCount="2" pageCount="2"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                styleClass="pagination"/>
</AnchorPane>