<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.admin.pages.HomeController">

      <!-- Revenue Charts Section -->
      <VBox fx:id="revenueVBox" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
          <HBox alignment="CENTER" spacing="10">
              <Label style="-fx-text-fill: #2c3e50;" text="Revenue Analysis">
                  <font>
               <Font name="System Bold" size="24" />
            </font>
              </Label>
              <Region HBox.hgrow="ALWAYS" />
              <Label style="-fx-text-fill: #666666;" text="Year:">
                  <font>
               <Font size="16" />
            </font>
              </Label>
              <ComboBox fx:id="yearComboBox" prefWidth="120" />
          </HBox>

          <HBox spacing="20">
              <!-- Bar Chart -->
              <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 10;" HBox.hgrow="ALWAYS">
                  <BarChart fx:id="revenueBarChart" legendVisible="false" prefHeight="400">
                      <xAxis>
                  <CategoryAxis side="BOTTOM" />
               </xAxis>
                      <yAxis>
                  <NumberAxis side="LEFT" />
               </yAxis>
                  </BarChart>
              </VBox>

              <!-- Line Chart -->
              <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 10;" HBox.hgrow="ALWAYS">
                  <LineChart fx:id="growthLineChart" legendVisible="false" prefHeight="400">
                      <xAxis>
                  <CategoryAxis side="BOTTOM" />
               </xAxis>
                      <yAxis>
                  <NumberAxis side="LEFT" />
               </yAxis>
                  </LineChart>
              </VBox>
          </HBox>
      </VBox>
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <content>
         <Pagination fx:id="pagination" maxPageIndicatorCount="2" pageCount="2" />
      </content>
    </ScrollPane>
     <VBox fx:id="productVBox" spacing="20" style="-fx-padding: 20;">
         <!-- Stats Cards Container -->
         <HBox spacing="20">
             <!-- Products Stats Card -->
             <StackPane styleClass="stat-card">
                 <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                 <VBox alignment="CENTER" spacing="10">
                     <Label style="-fx-text-fill: #666666;" text="Total Products">
                         <font>
                     <Font size="18" />
                  </font>
                     </Label>
                     <Label fx:id="productsCount" style="-fx-text-fill: #2c3e50;" text="0">
                         <font>
                     <Font name="System Bold" size="36" />
                  </font>
                     </Label>
                 </VBox>
             </StackPane>

                <!-- Employees Stats Card -->
             <StackPane styleClass="stat-card">
                 <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                 <VBox alignment="CENTER" spacing="10">
                     <Label style="-fx-text-fill: #666666;" text="Total Employees">
                         <font>
                     <Font size="18" />
                  </font>
                     </Label>
                     <Label fx:id="employeesCount" style="-fx-text-fill: #2c3e50;" text="0">
                         <font>
                     <Font name="System Bold" size="36" />
                  </font>
                     </Label>
                 </VBox>
             </StackPane>

                <!-- Orders Stats Card -->
             <StackPane styleClass="stat-card">
                 <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                 <VBox alignment="CENTER" spacing="10">
                     <Label style="-fx-text-fill: #666666;" text="Total Orders">
                         <font>
                     <Font size="18" />
                  </font>
                     </Label>
                     <Label fx:id="ordersCount" style="-fx-text-fill: #2c3e50;" text="0">
                         <font>
                     <Font name="System Bold" size="36" />
                  </font>
                     </Label>
                 </VBox>
             </StackPane>

                <!-- Customers Stats Card -->
             <StackPane styleClass="stat-card">
                 <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                 <VBox alignment="CENTER" spacing="10">
                     <Label style="-fx-text-fill: #666666;" text="Total Customers">
                         <font>
                     <Font size="18" />
                  </font>
                     </Label>
                     <Label fx:id="customersCount" style="-fx-text-fill: #2c3e50;" text="0">
                         <font>
                     <Font name="System Bold" size="36" />
                  </font>
                     </Label>
                 </VBox>
             </StackPane>
         </HBox>

            <!-- Best Selling Products Table -->
         <VBox spacing="10" style="-fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
             <Label style="-fx-text-fill: #2c3e50;" text="Products Analysis">
                 <font>
               <Font name="System Bold" size="24" />
            </font>
             </Label>
             <TableView fx:id="bestSellingTable" style="-fx-background-radius: 5;" VBox.vgrow="NEVER" />
         </VBox>
     </VBox>
</AnchorPane>
