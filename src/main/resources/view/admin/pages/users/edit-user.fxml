<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.admin.pages.users.EditUserController"
            prefHeight="600.0" prefWidth="600.0"
            stylesheets="@edit-user.css">

    <Text text="Edit User" layoutX="20.0" layoutY="20.0">
        <font>
            <Font name="Arial" size="20.0" />
        </font>
    </Text>

    <Label text="Full Name:" layoutX="20.0" layoutY="60.0"/>
    <TextField fx:id="fieldEditCustomerName" layoutX="150.0" layoutY="60.0" prefWidth="400.0"/>
    <Text fx:id="nameError" layoutX="150.0" layoutY="90.0" fill="red" visible="false"/>

    <Label text="Email:" layoutX="20.0" layoutY="100.0"/>
    <TextField fx:id="fieldEditCustomerEmail" layoutX="150.0" layoutY="100.0" prefWidth="400.0"/>
    <Text fx:id="emailError" layoutX="150.0" layoutY="130.0" fill="red" visible="false"/>

    <Label text="Username:" layoutX="20.0" layoutY="140.0"/>
    <TextField fx:id="fieldEditCustomerUsername" layoutX="150.0" layoutY="140.0" prefWidth="400.0"/>
    <Text fx:id="usernameError" layoutX="150.0" layoutY="170.0" fill="red" visible="false"/>

    <Label text="Phone Number:" layoutX="20.0" layoutY="180.0"/>
    <TextField fx:id="fieldEditCustomerPhone" layoutX="150.0" layoutY="180.0" prefWidth="400.0"/>
    <Text fx:id="phoneError" layoutX="150.0" layoutY="210.0" fill="red" visible="false"/>

    <Label text="Date of Birth:" layoutX="20.0" layoutY="220.0"/>
    <DatePicker fx:id="fieldEditCustomerDOB" layoutX="150.0" layoutY="220.0" prefWidth="400.0"/>
    <Text fx:id="dobError" layoutX="150.0" layoutY="250.0" fill="red" visible="false"/>

    <Label text="Gender:" layoutX="20.0" layoutY="260.0"/>
    <ComboBox fx:id="fieldEditCustomerGender" layoutX="150.0" layoutY="260.0" prefWidth="400.0"/>

    <Label text="Status:" layoutX="20.0" layoutY="300.0"/>
    <ComboBox fx:id="fieldEditCustomerStatus" layoutX="150.0" layoutY="300.0" prefWidth="400.0"/>

    <Label text="New Password:" layoutX="20.0" layoutY="340.0"/>
    <PasswordField fx:id="fieldEditCustomerPassword" layoutX="150.0" layoutY="340.0" prefWidth="400.0"/>
    <Text fx:id="passwordError" layoutX="150.0" layoutY="370.0" fill="red" visible="false"/>

    <Label text="Confirm Password:" layoutX="20.0" layoutY="380.0"/>
    <PasswordField fx:id="fieldEditCustomerConfirmPassword" layoutX="150.0" layoutY="380.0" prefWidth="400.0"/>
    <Text fx:id="confirmPasswordError" layoutX="150.0" layoutY="410.0" fill="red" visible="false"/>

    <Button text="Save" layoutX="150.0" layoutY="420.0" onAction="#btnEditCustomerOnAction"/>

    <TextField fx:id="fieldEditCustomerId" visible="false"/>
</AnchorPane>