<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx"
            fx:controller="controller.admin.pages.HomeController">

    <GridPane prefHeight="728.0" prefWidth="1120.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <children>
                    <Label fx:id="productsCount" alignment="CENTER_RIGHT" text="0">
                        <font>
                            <Font size="50.0"/>
                        </font>
                    </Label>
                    <Label text="Products">
                        <font>
                            <Font size="30.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                <children>
                    <Label fx:id="customersCount" alignment="CENTER_RIGHT" text="0">
                        <font>
                            <Font size="50.0"/>
                        </font>
                    </Label>
                    <Label text="Customers">
                        <font>
                            <Font size="30.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                </children>
            </HBox>
        </children>
    </GridPane>
</AnchorPane>
