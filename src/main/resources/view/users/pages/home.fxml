<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.users.pages.UserHomeController">
    <!-- Main content container -->
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="50.0">
        <!-- Dashboard Overview Text - Centered with background -->
        <HBox styleClass="dashboard-header" alignment="CENTER">
            <Label text="Dashboard Overview" styleClass="dashboard-title"/>
        </HBox>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="30">
                    <!-- Product VBox with Stats Cards -->
                    <VBox fx:id="productVBox" spacing="30" style="-fx-padding: 30;">
                        <!-- Stats Cards Container -->
                        <HBox spacing="20">
                            <!-- Products Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                                <VBox alignment="CENTER" spacing="10">
                                    <Label style="-fx-text-fill: #666666;" text="Total Products">
                                        <font>
                                            <Font size="18" />
                                        </font>
                                    </Label>
                                    <Label fx:id="productsCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="36" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                            

                            <!-- Orders Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                                <VBox alignment="CENTER" spacing="10">
                                    <Label style="-fx-text-fill: #666666;" text="Total Orders">
                                        <font>
                                            <Font size="18" />
                                        </font>
                                    </Label>
                                    <Label fx:id="ordersCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="36" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>

                            <!-- Customers Stats Card -->
                            <StackPane styleClass="stat-card">
                                <Rectangle arcHeight="20" arcWidth="20" height="150" style="-fx-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" width="300" />
                                <VBox alignment="CENTER" spacing="10">
                                    <Label style="-fx-text-fill: #666666;" text="Total Customers">
                                        <font>
                                            <Font size="18" />
                                        </font>
                                    </Label>
                                    <Label fx:id="customersCount" style="-fx-text-fill: #2c3e50;" text="0">
                                        <font>
                                            <Font name="System Bold" size="36" />
                                        </font>
                                    </Label>
                                </VBox>
                            </StackPane>
                        </HBox>

                        <!-- Best Selling Products Table -->
                        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                            <Label style="-fx-text-fill: #2c3e50;" text="Products Analysis">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                            <TableView fx:id="bestSellingTable" style="-fx-background-radius: 5;" VBox.vgrow="NEVER" />
                        </VBox>
                    </VBox>

                    <!-- Revenue VBox -->
                    <VBox fx:id="revenueVBox" spacing="30" style="-fx-padding: 30;">
                        <!-- Revenue Charts Section -->
                        <VBox spacing="25" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                            <HBox alignment="CENTER" spacing="15">
                                <Label style="-fx-text-fill: #2c3e50;" text="Revenue Analysis">
                                    <font>
                                        <Font name="System Bold" size="28" />
                                    </font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label style="-fx-text-fill: #666666;" text="Year:">
                                    <font>
                                        <Font size="18" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="yearComboBox" prefWidth="120" />
                            </HBox>

                            <HBox spacing="25">
                                <!-- Bar Chart -->
                                <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;" HBox.hgrow="ALWAYS">
                                    <BarChart fx:id="revenueBarChart" legendVisible="false" prefHeight="450">
                                        <xAxis>
                                            <CategoryAxis side="BOTTOM" />
                                        </xAxis>
                                        <yAxis>
                                            <NumberAxis side="LEFT" />
                                        </yAxis>
                                    </BarChart>
                                </VBox>

                                <!-- Line Chart -->
                                <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 15;" HBox.hgrow="ALWAYS">
                                    <LineChart fx:id="growthLineChart" legendVisible="false" prefHeight="450">
                                        <xAxis>
                                            <CategoryAxis side="BOTTOM" />
                                        </xAxis>
                                        <yAxis>
                                            <NumberAxis side="LEFT" />
                                        </yAxis>
                                    </LineChart>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </VBox>
    
    <!-- Fixed pagination at bottom -->
    <Pagination fx:id="pagination" maxPageIndicatorCount="2" pageCount="2" 
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                style="-fx-background-color: white;"/>
</AnchorPane>
