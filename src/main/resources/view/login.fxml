<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1280.0" styleClass="root"
           stylesheets="@resources/css/login.css" xmlns="http://javafx.com/javafx/22"
           fx:controller="controller.LoginController">
    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <center>
            <AnchorPane styleClass="root" BorderPane.alignment="CENTER">
                <ImageView fitHeight="152.0" fitWidth="251.0" layoutX="528.0" layoutY="98.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@resources/img/brand/360_F_784277349_wCyNJz9BpCaDeZ3OqGUBD6SMKPEeMTDI.jpg"/>
                </ImageView>
                <Text id="welcome-text" layoutX="560.0" layoutY="298.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Welcome" textAlignment="CENTER">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Text>
                <Text layoutX="390.0" layoutY="329.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Enter username and password to login:" textAlignment="CENTER" wrappingWidth="500.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="usernameField" layoutX="523.0" layoutY="349.0" prefHeight="26.0" prefWidth="248.0"
                           promptText=" username"/>
                <PasswordField fx:id="passwordField" layoutX="523.0" layoutY="387.0" prefHeight="26.0" prefWidth="248.0"
                               promptText="password"/>
                <Button layoutX="523.0" layoutY="458.0" mnemonicParsing="false" onAction="#handleLoginButtonAction"
                        prefHeight="32.0" prefWidth="248.0" styleClass="success" text="Login">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <Text layoutX="390.0" layoutY="520.0" strokeType="OUTSIDE" strokeWidth="0.0" text="or"
                      textAlignment="CENTER" wrappingWidth="500.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <Button layoutX="523.0" layoutY="535.0" mnemonicParsing="false" onAction="#handleRegisterButtonAction"
                        prefHeight="32.0" prefWidth="248.0" styleClass="primary" text="Register">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
            </AnchorPane>
        </center>
    </BorderPane>
</StackPane>
